{
    "compilerOptions": {
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src/",
        "removeComments": true,
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        //"noUncheckedIndexedAccess": true
    },
    "exclude": [
        "**/*.test.ts"
    ]
}